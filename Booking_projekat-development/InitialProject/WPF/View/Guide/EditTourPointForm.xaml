<Window x:Class="InitialProject.View.EditTourPointForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="EditTourPointForm" Height="189" Width="300" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,52">
        <Label x:Name="FirstName" Margin="0,10,0,37"></Label>
        <ComboBox Name ="OrderComboBox" IsTextSearchEnabled="True" StaysOpenOnEdit="True" IsEditable="True"
                      ItemsSource="{Binding Orders}" HorizontalAlignment="Left" Width ="33" SelectedIndex="0" Margin="159,26,0,53"/>
        <Button Content="Save" HorizontalAlignment="Left" Height="30" Margin="197,32,0,0" VerticalAlignment="Top" Width="95" Click="SaveButtonClick"/>
    </Grid>
</Window>
