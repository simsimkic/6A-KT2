<Window x:Class="InitialProject.View.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="StartWindow" Height="500" Width="450" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Source="/Resources/Images/BookBuddy_logo1.png" Height="50" Margin="59,0,58,0" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" Height="316">
            <Button Content="Owner" HorizontalAlignment="Center" Height="47" Width="200" Margin="0,10,0,0" Click="Owner_ButtonClick"/>
            <Button Content="Guest1" HorizontalAlignment="Center" Height="46" Width="200" Margin="0,10,0,0" Click="Guest1_ButtonClick"/>
            <Button Content="Guide" HorizontalAlignment="Center" Height="47" Width="200" Margin="0,10,0,0" Click="Guide_ButtonClick"/>
            <Button Content="Guest2" HorizontalAlignment="Center" Height="48" Width="200" Margin="0,10,0,0" Click="Guest2_ButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
