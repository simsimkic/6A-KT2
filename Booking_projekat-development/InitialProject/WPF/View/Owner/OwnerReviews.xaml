<Window x:Class="InitialProject.View.Owner.OwnerReviews"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InitialProject.View.Owner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OwnerReviews">

    <Grid>
        <Label>Owner reviews:</Label>

        <DataGrid Grid.Column="1" Grid.Row="1" Margin="10,29,20,45"
                  
                  IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="AcommodationId" Width="*" ></DataGridTextColumn>
                <DataGridTextColumn Header="Cleanliness" Width="*" ></DataGridTextColumn>
                <DataGridTextColumn Header="Correctness Rate" Width="*" ></DataGridTextColumn>
                <DataGridTextColumn Header="Additional comment" Width="*" ></DataGridTextColumn>
                
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
