<Window x:Class="InitialProject.View.EnterGuestNumberDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="Enter Guest Number" Height="153" Width="353"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,0,6">
        <Label Content="Please enter the number of guests" HorizontalAlignment="Left" Margin="25,35,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="Input1" HorizontalAlignment="Left" Height="26" Margin="221,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95"/>
        <Button Content="Reserve" HorizontalAlignment="Left" Height="30" Margin="121,76,0,0" VerticalAlignment="Top" Width="95" Click="ReserveButtonClick"/>

    </Grid>
</Window>
